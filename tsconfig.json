{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "outDir": "./public",
    "rootDir": "./src",
    "lib": ["ES2016", "DOM"],
    "types": ["@capacitor/local-notifications"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "www", "android", "ios"]
}
